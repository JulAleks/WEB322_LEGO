<%- include('partials/header') %>

<body>

  <%- include('partials/navbar', {page: '/sets'}) %>


  <br />

  <div class="container mx-auto p-4">

    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Collection</h1>
          <p class="py-6">Browse the entire collection. Click the theme to filter by themes such as:
            <a href="/lego/sets?theme=Supplemental" class="btn btn-primary btn-xs">Supplemental</a>
            <a href="/lego/sets?theme=System" class="btn btn-primary btn-xs">System</a>
            <a href="/lego/sets?theme=Basic%20Set" class="btn btn-primary btn-xs">Basic Set</a>
            <a href="/lego/sets?theme=Town%20Plan" class="btn btn-primary btn-xs">Town Plan</a>
            <a href="/lego/sets?theme=Racoon" class="btn btn-primary btn-xs">No existing theme</a>
          </p>
          
        </p>
        </div>
      </div>
    </div>

    <div class="overflow-x-auto overflow-y-hidden">
        <table class="table table-zebra">
            <tbody>
              <% sets.forEach((set) => { %>
                <tr>
                  <td>
                    <div class="avatar">
                      <div class="w-32 h-32 rounded-lg bg-transparent bg-no-repeat bg-cover" style="background-image: url('<%= set.img_url %>');"></div>
                    </div>
                  </td>
                  <td>
                    <%= set.name %> | <a href="/lego/sets?theme=<%= set.legoTheme %>" class="btn mt-2 btn-xs"><%= set.legoTheme %></a>
                                     

                  </td>
                  <td>
                    <span class="font-bold">Year: </span><%= set.year %> - <span class="font-bold">Parts:</span> <%= set.num_parts %>
                  </td>
                  <td>
                    <a href="/lego/sets/<%= set. set_num %>" class="btn btn-xs">details</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
      </div>
    </div>
</body>

</html>