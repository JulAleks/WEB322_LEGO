<%- include('partials/header') %>

<body>
  <%- include('partials/navbar', { page: '/register' }) %>
 <br>

  <div class="container mx-auto p-4">


    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Register</h1>
          <p class="py-6">Please provide your credentials below</p>
        </div>
      </div>
    </div>
    
    <br>
    <% if (!locals.registered) { %>
    <form method="post" action="/register" class="space-y-4">
      <div class="flex flex-col">
          <label for="userName" class="text-sm font-semibold text-gray-600">User Name</label>
          <input
              id="userName"
              name="userName"
              type="text"
              placeholder="User Name"
              required
              value=""
              class="mt-1 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-500"
          />
      </div>
  
      <div class="flex flex-col">
        <label for="password" class="text-sm font-semibold text-gray-600">Password</label>
        <input
            id="password"
            name="password"
            type="password"
            placeholder="Password"
            required
            class="mt-1 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-500"
        />
    </div>
    
    <div class="flex flex-col">
        <label for="password2" class="text-sm font-semibold text-gray-600">Confirm Password</label>
        <input
            id="password2"
            name="password2"
            type="password"
            placeholder="Confirm Password"
            required
            class="mt-1 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-500"
        />
    </div>
  
      <div class="flex flex-col">
          <label for="email" class="text-sm font-semibold text-gray-600">email</label>
          <input
              id="email"
              name="email"
              type="email"
              placeholder="email"
              required
              value=""
              class="mt-1 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-500"
          />
      </div>
  
      <input
          type="submit"
          class="bg-green-500 text-white p-2 rounded-md cursor-pointer hover:bg-green-600 focus:outline-none focus:ring focus:border-blue-500"
          value="Register"
      />
    </form>
    <% } %>
    <br><br>
      <% if (typeof successMessage !== 'undefined' && successMessage) { %>
        <div class="alert">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <span><%= successMessage %></span>
          </div><br />
          <a href="/login" class="btn btn-success">
            Proceed to Log in
          </a>
      <% } %>
  
      <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <span><%= errorMessage %></span>
          </div>    
      <% } %>
 
  </div>
  </body>
</html>